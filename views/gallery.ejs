<html>
<head>
    <style>
        div.gallery  {
            margin: 5px;
            border: 1px solid #ccc;
            float: left;
            width: 180px;
        }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

        div.desc {
            padding: 15px;
            text-align: center;
        }
    </style>
</head>

<script>
    const token = localStorage.getItem("token");
    window.addEventListener('load',() => {
        fetch('/api/pic',{
            headers: {
                Authorization : token
            },
            method: 'GET'
        }).then((response) => {
            return response.json()
        }).then((data) => {
            console.log(data);
            data.result.forEach( function ( post ) {
                var htmlOutput  = ''
                htmlOutput += '<div class="gallery">' +
                    '<a target="_blank" href= "' + post.file_url + '">' +
                        '<img src="' + post.file_url + '" alt="' + data.file_original_name+ '" width="600" height="400">' +
                    '</a>' +
                    '<div class="desc">' + post.file_original_name +"/"+ post.file_saved + '</div>' +
                '</div>';
                document.getElementById('display_posts').append(htmlOutput);
            });
        }).catch(err => alert(err))});

</script>

<body>
<div id="display_posts">

</div>

</body>
</html>